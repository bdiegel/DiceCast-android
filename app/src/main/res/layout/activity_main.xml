<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dice.app.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="33dip"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:id="@+id/top_layout">

        <TextView
            android:text="@string/initial_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@id/textMessage"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center|top" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="44dip"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_layout">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/roll_button"
            android:id="@+id/rollButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:baselineAligned="false"
        android:weightSum="1"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/top_layout"
        android:layout_above="@+id/bottom_layout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:id="@+id/imageViewDie1"
            android:src="@drawable/dice_3"
            android:layout_weight="0.5"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="6dip" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:id="@+id/imageViewDie2"
            android:src="@drawable/dice_4"
            android:layout_weight="0.5"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:layout_marginRight="12dip"
            android:layout_marginLeft="6dip" />
    </LinearLayout>

</RelativeLayout>
